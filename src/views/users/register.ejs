<!DOCTYPE html>
<html lang="en">
<head>
    <!--incluimos partials del head-->
    <%- include('./../partials/head') %>
    <link rel="stylesheet" href="../css/styles.css">

    <title>Donas - Register</title>
</head>
<body class="body-register">

    <!--incluimos partials del headerUser-->
    <%- include('./../partials/header') %>

        <main class="register">
            <section class="section-register">

                <h3>Creá tu usuario</h3>
                <form action="/users" method="POST" enctype="multipart/form-data">
                    <div class="field-div">
                        <label class="label-field register-h2" for="first_name">Nombre:</label>
                        <input class="field-text" type="text" name="first_name" id="first_name" placeholder="Nombre"
                        value="<%= locals.oldData ? oldData.first_name : null %>" required="required" minlength="2">
                    </div>
                    <% if (locals.errors && errors.first_name) { %>
                        <div class="text-danger field-text">
                            <%= errors.first_name.msg  %> 
                        </div>
                    <% } %>
                    <div class="field-div">
                        <label class="label-field register-h2" for="last_name">Apellido:</label>
                        <input class="field-text" type="text" name="last_name" id="last_name" placeholder="Apellido"
                        value="<%= locals.oldData ? oldData.last_name : null %>" required="required" minlength="2">
                    </div>
                    <% if (locals.errors && errors.last_name) { %>
                        <div class="text-danger field-text">
                            <%= errors.last_name.msg  %> 
                        </div>
                    <% } %>
                    <div class="field-div">
                        <label class="label-field  register-h2" for="username">Nombre de Usuario:</label>
                        <input class="field-text" type="text" name="username" id="username" placeholder="Username"
                        value="<%= locals.oldData ? oldData.username : null %>" required="required" minlength="2">
                    </div>
                    <% if (locals.errors && errors.username) { %>
                        <div class="text-danger field-text">
                            <%= errors.username.msg  %> 
                        </div>
                    <% } %>
                    <div>
                        <label class="label-field  register-h2" for="birthday">Fecha de Nacimiento:</label>
                        <input class="field-date  register-h2" type="date" name="birthday" id="birthday"
                         placeholder="Fecha de Nacimiento"
                         value="<%= locals.oldData ? oldData.birthday : null %>" required="required">
                    </div>
                    <% if (locals.errors && errors.birthday) { %>
                        <div class="text-danger field-text">
                            <%= errors.birthday.msg  %> 
                        </div>
                    <% } %>
                    <div class="field-div">
                        <label class="label-field register-h2" for="email">Email:</label>
                        <input class="field-text" type="email" name="email" id="email" placeholder="Escribe tu dirección"
                        value="<%= locals.oldData ? oldData.email : null %>" required="required">
                    </div>
                    <% if (locals.errors && errors.email) { %>
                        <div class="text-danger field-text">
                            <%= errors.email.msg  %> 
                        </div>
                    <% } %>
                    <div class="field-div">
                        <label class="label-field register-h2">Intereses</label>
                    </div>
                    <div class="field-div">
                        <label class="label-field register-h2"><input type="checkbox" name="myselection" value="dulce_de_leche"> De Dulce De Leche</label>
                    </div>
                    <div class="field-div">
                        <label class="label-field register-h2"><input type="checkbox" name="myselection" value="chocolate"> De Chocolate</label>
                    </div>
                    <div class="field-div">
                        <label class="label-field register-h2"><input type="checkbox" name="myselection" value="frutal"> Frutal</label>
                    </div>
                    <div class="field-div">
                        <label class="label-field register-h2"><input type="checkbox" name="myselection" value="crema_pastelera"> De Crema Pastelera</label>
                    </div>
                    <div class="field-div">
                        <label class="label-field register-h2"><input type="checkbox" name="myselection" value="sorprendeme"> Sorprendeme</label>
                    </div>
                    <div class="field-div">
                    <br>
                        <label class="label-field register-h2" for="avatar">Avatar de Usuario:</label>
                            <input class="field-text  register-h2" type="file"  id="avatar" name="avatar" accept=".png, .jpg, .jpeg, .gif" style="color: transparent" required="required"
                            value="<%= locals.oldData ? oldData.avatar : null %>">
                    </div>
                    <% if (locals.errors && errors.avatar) { %>
                        <div class="text-danger field-text">
                            <%= errors.avatar.msg  %> 
                        </div>
                    <% } %>
                    <div class="field-div">
                        <label class="label-field register-h2" for="password">Contraseña:</label>
                        <input class="field-text" type="password" name="password" id="password" minlength="8" pattern=".\d)(?=.[a-z])(?=.*[A-Z]).{8,}" 
                        title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
                    </div>
                    <% if (locals.errors && errors.password) { %>
                        <div class="text-danger field-text">
                            <%= errors.password.msg  %> 
                        </div>
                    <% } %>
                    <div class="field-div">
                        <label class="label-field register-h2" for="confirm-password">Confirmar Contraseña:</label>
                        <input class="field-text" type="password" name="confirm-password" id="confirm-password" minlength="8" pattern=".\d)(?=.[a-z])(?=.*[A-Z]).{8,}" 
                        title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
                    </div>
                    <div class="field-div">
                        <button class="button-register" type="submit" value="Submit">Creá tu Cuenta</button>
                        <button class="button-register" type="reset" value="Reset">Rellena de Nuevo</button>
                    </div>
                
                    </div>
                </form>   
             </section>  
             <section>   
                <div class="login-account">
                    <h3>¿Ya tenes usuario?</h3>
                    <a href="/users/login">Endulza tu día <i class="fas fa-stroopwafel"></i></a></li>
                </div>
                <!--
                <div class="field-div">
                    <button class="button-register" type="submit">Creá tu Cuenta</button>
                    <button class="button-register" type="reset">Rellena de Nuevo</button>
                </div>
                -->
            </section>  <!--Responsive Register-->
        
        </main>
    <!--incluimos partials del footerUser-->
    <%- include('./../partials/footerUser') %>
</body>
</html>